<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/aui_tv_userId"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp"
        android:text="userId not init"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/aui_tv_userName"
        app:layout_constraintTop_toBottomOf="@+id/aui_tv_userId"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp"
        android:text="userName not init"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/aui_btn"
        app:layout_constraintTop_toBottomOf="@+id/aui_tv_userName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp"
        android:text="显示fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/aui_fl"
        app:layout_constraintTop_toBottomOf="@+id/aui_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constrainedHeight="true"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>